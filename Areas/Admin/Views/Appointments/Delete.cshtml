@model FloCares.Models.Entities.Appointment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Form validation -->
<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">Delete Appointment</h5>

        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
                <li><a data-action="close"></a></li>
            </ul>
        </div>
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                @TempData["error"]
            </div>
        }

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                @TempData["success"]
            </div>
        }
    </div>

    <div class="panel-body">
        <div class="alert alert-danger alert-dismissible">
            <h3>Are you sure you want to delete this?</h3>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Department)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Department.DeptName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Doctor)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Doctor.Address)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.AppointmentDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AppointmentDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Problem)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Problem)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>

            <div class="form-actions no-color btn-delete">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-default" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>