@model IEnumerable<FloCares.Models.Entities.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Style {


}

<!-- Page length options -->
<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">Departments</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
                <li><a data-action="close"></a></li>
            </ul>
        </div>
    </div>

    <div class="panel-body">
        <div class="btn-group pull-right">

            <a class="btn btn-success" asp-area="Admin" asp-controller="Departments" asp-action="Create">Create Department<i class='fa fa-plus fa-fw'></i> </a>
        </div>
    </div>

    <table class="table datatable-show-all table-bordered">
        <thead>
            <tr>

                <th>
                    S/No
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeptName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int sno = 0;
            }

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @{ sno++; }
                    @sno
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                @if (item.Status == FloCares.Models.Entities.DeptStatus.Active)
                {
                    <td><span class="label label-success"> @Html.DisplayFor(modelItem => item.Status)</span></td>
                }
                else
                {
                    <td><span class="label label-danger"> @Html.DisplayFor(modelItem => item.Status)</span></td>
                }



                <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class='fa fa-edit fa-fw'></i>Edit</a></td>
                <td> <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class='fa fa-eye fa-fw'></i>Details</a></td>
                <td>  <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class='fa fa-minus fa-fw'></i>Delete</a></td>



            </tr>
            }


        </tbody>
    </table>
</div>
<!-- /page length options -->
