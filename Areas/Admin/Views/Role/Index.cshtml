@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Style {


}

<!-- Page length options -->
<div class="panel panel-flat">
    <div class="panel-heading">
        <h5 class="panel-title">All Roles</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
                <li><a data-action="reload"></a></li>
                <li><a data-action="close"></a></li>
            </ul>
        </div>
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                @TempData["error"]
            </div>
        }

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                @TempData["success"]
            </div>
        }
    </div>

    <div class="panel-body">
        <div class="btn-group pull-right">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Role" asp-action="Create">Create a Role<i class='fa fa-edit fa-fw'></i> </a>
        </div>
    </div>

    <table class="table datatable-show-all table-bordered">
        <thead>
            <tr>

                <th>S/No</th>
                <th>Name</th>
                <th i-role>Normalized Name</th>
                <td>Id</td>
                <th>Update</th>
                <th>Delete</th>
                @*<th class="text-center">Actions</th>*@
            </tr>
        </thead>
        <tbody>
            @{
                int sno = 0;
            }

            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @{ sno++; }
                        @sno
                    </td>
                    <td>@role.Name</td>
                    <td i-role="@role.Id">@role.NormalizedName</td>
                    <td>@role.Id</td>
                    <td><a asp-action="Update" asp-route-id="@role.Id" class="btn btn-sm btn-success">Update</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                    @*<td></td>*@
                    @*<td class="text-center">
                        <ul class="icons-list">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-menu9"></i>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li>
                                        <a asp-action="Update" asp-route-id="@role.Id">Update</a>
                                    </li>
                                    <li>
                                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </li>


                                </ul>
                            </li>
                        </ul>
                    </td>*@


                </tr>
            }


        </tbody>
    </table>
</div>
<!-- /page length options -->
